<UserControl x:Class="Stronghold.Views.UserControls.UC_Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stronghold.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="506" Width="506">
    <Grid>
        <WrapPanel Margin="0,18,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="Welcome" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFF5E9E2" FontSize="36" FontWeight="Bold"/>
            <Label x:Name="CurrentUsername" Content="Stronghold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFD44D5C" FontSize="36" FontWeight="Bold" Height="58" Padding="5,5,0,5"/>
            <Label Content="." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFF5E9E2" FontSize="36" FontWeight="Bold" Width="9" Padding="0,5,0,5"/>
        </WrapPanel>
        <Button Style="{StaticResource PrimaryButton}" Content="New landmark" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top" Width="506" Padding="18,1,1,1" Click="NewLandmarkButton_Click"/>
    </Grid>
</UserControl>
